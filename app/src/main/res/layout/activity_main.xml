<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main"
    android:background="@drawable/lot">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/horizontalScrollView"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ScrollView
            android:layout_width="350dp"
            android:layout_height="265dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:background="@drawable/map"
                android:layout_marginBottom="199dp" />
        </ScrollView>
    </HorizontalScrollView>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/mapSpinner"
        android:layout_marginBottom="166dp"
        android:spinnerMode="dropdown"
        android:background="#282726"
        android:layout_alignBottom="@+id/horizontalScrollView"
        android:layout_centerHorizontal="true">
    </Spinner>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignTop="@+id/mapSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="#282726"
        android:width="360dp"
        android:text="@string/calander"
        android:textSize="20sp"
        android:textColor="#fffa00" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="@string/site"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/horizontalScrollView"
        android:layout_centerHorizontal="true"
        android:textColor="#fffa00"
        android:editable="false" />

</RelativeLayout>
